@inherits LayoutComponentBase
@layout Components.Layout.MainLayout

<CascadingValue Value="this">
  <div id="conteudo">
    <header id="subheader">
      <h1>@Title</h1>
      <a id="voltar" href="javascript:history.go(-1)"></a>
    </header>
    @Body
  </div>
</CascadingValue>

@code
{
  private string title = "";
  public string Title
  {
      get => title;
      set
      {
          title = value;
          InvokeAsync(() => StateHasChanged());
      }
  }
}
